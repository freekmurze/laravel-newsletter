{
    "name": "spatie/laravel-newsletter",
    "description": "Manage newsletters in Laravel",
    "keywords": [
        "laravel",
        "newsletter",
        "mailcoach",
        "mailchimp"
    ],
    "homepage": "https://github.com/spatie/laravel-newsletter",
    "license": "MIT",
    "authors": [
        {
            "name": "Freek Van der Herten",
            "email": "freek@spatie.be",
            "homepage": "https://spatie.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^9.39",
        "spatie/laravel-package-tools": "^1.13"
    },
    "suggest": {
        "spatie/mailcoach-sdk-php": "For working with Mailcoach",
        "drewm/mailchimp-api": "For working with MailChimp"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "mockery/mockery": "^1.4",
        "spatie/ray": "^1.28",
        "pestphp/pest": "^1.20",
        "spatie/mailcoach-sdk-php": "^1.0",
        "drewm/mailchimp-api": "^2.5"
    },
    "autoload": {
        "psr-4": {
            "Spatie\\Newsletter\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spatie\\Newsletter\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "analyse": "vendor/bin/phpstan",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Spatie\\Newsletter\\NewsletterServiceProvider"
            ],
            "aliases": {
                "Newsletter": "Spatie\\Newsletter\\NewsletterFacade"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
